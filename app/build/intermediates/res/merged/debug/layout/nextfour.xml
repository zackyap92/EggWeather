<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nextfour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.regine.pdma.nextfour"
    android:background="#ffd657"
    android:fontFamily="sans-serif-medium">


    <ImageView
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/dottwo"
        android:id="@+id/imageView18"
        android:layout_marginBottom="113dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_height="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/navtab1"
        android:id="@+id/imageViewTab"
        android:elevation="0dp"
        android:layout_alignTop="@+id/imageView18"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonToday"
        android:background="@android:color/transparent"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonRate"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/buttonToday"
        android:layout_alignBottom="@+id/buttonToday"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView4"
        android:layout_marginLeft="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/eggweather"
        android:id="@+id/imageView7"
        android:layout_marginTop="34dp"
        android:layout_alignTop="@+id/imageView4"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/singapore"
        android:id="@+id/imageView2"
        android:layout_above="@+id/imageView18"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />


</RelativeLayout>
