<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.regine.pdma.rate"
    android:background="#ffd657"
    android:fontFamily="sans-serif-medium">


    <ImageView
        android:layout_width="100sp"
        android:layout_height="50sp"
        app:srcCompat="@drawable/eggweather"
        android:id="@+id/imageView7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />



    <ImageView
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo"
        android:id="@+id/imageView4"
        android:layout_marginLeft="90dp"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="SHARE WITH YOUR LOVE ONE"
        android:fontFamily="sans-serif-medium"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:id="@+id/textView13" />

    <TextView
        android:text="Thank You for choosing Egg Weather"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="RATE-US-NOW"
        android:fontFamily="sans-serif-medium"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/imageView7"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/tweet"
        android:id="@+id/imageView13"
        android:layout_alignTop="@+id/imageView12"
        android:layout_alignEnd="@+id/textView6" />

    <ImageView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:srcCompat="@drawable/fbicon"
        android:id="@+id/imageView12"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView13"
        android:layout_alignStart="@+id/textView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/facebook"
        android:background="@android:color/transparent"
        android:layout_marginBottom="14dp"
        android:layout_alignBottom="@+id/imageView12"
        android:layout_alignStart="@+id/imageView12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twitter"
        android:background="@android:color/transparent"
        android:layout_alignBaseline="@+id/facebook"
        android:layout_alignBottom="@+id/facebook"
        android:layout_alignStart="@+id/imageView13" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonMap"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView7"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonToday"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="6dp"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/navtab3"
        android:id="@+id/imageView3"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/imageView13"
        android:layout_alignParentStart="true" />


</RelativeLayout>
